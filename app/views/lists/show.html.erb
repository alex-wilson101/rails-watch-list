<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <i class="fa-solid fa-ticket"></i>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "My lists", lists_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New list", new_list_path, class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://legacybox.com/cdn/shop/articles/LBFilmReel_1024x1024.jpg?v=1563402798);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="d-flex justify-content-end p-3">
<%= link_to "Add a movie", new_bookmark_path, class: "btn" %>
</div>
<div class="container">
  <div class="row row-cols-3">
    <% @bookmarks.each do |bookmark| %>
    <div class="col">
      <div class="card" style="width: 22rem;">
        <%= image_tag(bookmark.movie.poster_url, class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text"><%= bookmark.movie.rating %>/10</p>
          <p class="card-text">Comment: <%= bookmark.comment %></p>
          <%= link_to "delete", bookmark_path(bookmark), class: "btn btn-primary",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
